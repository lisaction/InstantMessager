<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryLight"
    android:paddingLeft="80dp"
    android:paddingRight="8dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/chat_image_me"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/icon_account"
        />
    <TextView
        android:id="@+id/chat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/chat_send_style"
        android:layout_toLeftOf="@id/chat_image_me"
        android:layout_toStartOf="@id/chat_image_me"
        android:layout_alignTop="@id/chat_image_me"
        android:background="@drawable/chat_bubble_send"
        android:textColor="@color/colorPrimaryText"
        android:text="the message sent"
        />




</RelativeLayout>