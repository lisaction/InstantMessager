<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
</style>
    <!-- Primary button style. -->
    <style name="primary_button_style" >
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>
    <!-- Chat primary style. -->
    <style name="chat_primary_style">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">12dp</item>
            </style>
    <!-- Chat send style. -->
    <style name="chat_send_style" parent="chat_primary_style">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>
    <!-- Chat receive style. -->
    <style name="chat_receive_style" parent="chat_primary_style">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <!-- Friend list bar. -->
    <style name="friend_bar_style">
        <item name="android:padding">@dimen/friend_bar_padding</item>
    </style>
    <!-- Activity Head bar. -->
    <style name="head_bar_style">
        <item name="android:background">@color/colorPrimary</item>
    </style>
</resources>
